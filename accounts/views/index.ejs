<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>记账本</title>
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "PingFang SC",
                   "Hiragino Sans GB", "Microsoft YaHei", Arial, sans-serif;
      color: #333;
      background: #fff;
    }

    .container {
      max-width: 760px;
      margin: 26px auto;
      padding: 0 14px;
    }

    h1 {
      margin: 0 0 12px 0;
      font-size: 34px;
      font-weight: 700;
    }

    .divider {
      height: 1px;
      background: #eee;
      margin-bottom: 16px;
    }

    .card {
      border: 1px solid #e6e6e6;
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 14px;
      background: #fff;
    }

    .card__head {
      padding: 10px 14px;
      font-size: 14px;
      color: #555;
      border-bottom: 1px solid #e6e6e6;
    }

    .card--expense .card__head { background: #f4dcdc; }
    .card--income  .card__head { background: #dff0d8; }

    .card__body {
      padding: 12px 14px;
      display: flex;
      align-items: center;
      gap: 10px;
      min-height: 46px;
    }

    .desc {
      flex: 1;
      font-size: 15px;
      line-height: 1.4;
      color: #444;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .tag {
      display: inline-block;
      padding: 3px 10px;
      border-radius: 3px;
      font-size: 12px;
      color: #fff;
      user-select: none;
    }

    .tag--expense { background: #d39b3a; } /* 近似截图的土黄 */
    .tag--income  { background: #5cb85c; } /* 近似截图的绿色 */

    .amount {
      width: 90px;
      text-align: right;
      font-size: 14px;
      color: #333;
      white-space: nowrap;
    }

    .del {
      width: 26px;
      text-align: right;
      font-size: 22px;
      line-height: 1;
      color: #222;
      text-decoration: none;
      opacity: .85;
    }
    .del:hover { opacity: 1; }
  </style>
</head>

<body>
  <div class="container">
    <h1><%= title || '记账本' %></h1>
    <div class="divider"></div>

    <% const list = Array.isArray(records) ? records : []; %>

    <% if (list.length === 0) { %>
      <p style="color:#777;margin:18px 0;">暂无记录</p>
    <% } %>

    <% list.forEach(item => { 
         const isExpense = item.type === 'expense' || item.type === '支出';
         const cardCls = isExpense ? 'card card--expense' : 'card card--income';
         const tagText = isExpense ? '支出' : '收入';
         const tagCls  = isExpense ? 'tag tag--expense' : 'tag tag--income';
         const showDel = item.deletable !== false; // 默认显示删除
    %>
      <div class="<%= cardCls %>">
        <div class="card__head"><%= item.date %></div>

        <div class="card__body">
          <div class="desc" title="<%= item.desc %>"><%= item.desc %></div>
          <span class="<%= tagCls %>"><%= tagText %></span>
          <div class="amount"><%= item.amount %> 元</div>

          <% if (showDel) { %>
            <!-- 你可以把 href 换成你的删除路由 -->
            <a class="del" href="/bill/delete/<%= item.id %>" aria-label="删除">×</a>
          <% } else { %>
            <span style="width:26px;"></span>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
