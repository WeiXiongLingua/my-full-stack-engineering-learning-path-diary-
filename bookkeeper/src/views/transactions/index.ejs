<h2>Transactions</h2>


<p><a href='/transactions/new'>+ Add</a></p>

<table>
  <thead>
    <tr>
      <th>Date</th><th>Type</th><th>Category</th><th>Amount</th><th>Note</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.occurred_on.toISOString().slice(0, 10) %></td>
        <td><%= item.type %></td>
        <td><%= item.category %></td>
        <td><%= (item.amount_cents / 100).toFixed(2) %></td>
        <td><%= item.note || '' %></td>
        <td>
          <a href='/transactions/<%= item.id %>/edit'>Edit</a>
          <form action='/transactions/<%= item.id %>/delete' method='post' style='display:inline'>
            <button type='submit' onclick="return confirm('Delete this item?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
