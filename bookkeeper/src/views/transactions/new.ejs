<h2>New Transaction</h2>

<% if (error) { %>
  <p class='error'><%= error %></p>
<% } %>

<form method='post' action='/transactions'>
  <label>Type</label>
  <select name='type'>
    <option value='expense' <%= form?.type === 'expense' ? 'selected' : '' %>>expense</option>
    <option value='income' <%= form?.type === 'income' ? 'selected' : '' %>>income</option>
  </select>

  <label>Amount</label>
  <input name='amount' value='<%= form?.amount || '' %>' placeholder='12.34' />

  <label>Category</label>
  <input name='category' value='<%= form?.category || '' %>' placeholder='food' />

  <label>Date</label>
  <input type='date' name='occurred_on' value='<%= form?.occurred_on || '' %>' />

  <label>Note</label>
  <textarea name='note'><%= form?.note || '' %></textarea>

  <button type='submit'>Create</button>
</form>

<p><a href='/transactions'>Back</a></p>
